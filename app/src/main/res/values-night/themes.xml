<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjetM1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- This code is for changing the color of the bar. -->
        <!-- Type your colour code which you want to set in colorPrimary item -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#99000000</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewHeaderStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ProjetM1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorPrimary">#000000</item>
        <item name="android:popupTheme">@style/PopupMenuStyle</item>
    </style>
    <style name="Theme.ProjetM1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PopupMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your menu color here -->
        <item name="android:textColor">@color/white</item> <!-- Replace #FF0000 with your desired menu text color -->
        <item name="android:colorControlNormal">@color/white</item> <!-- Replace #00FF00 with your desired menu icon color -->
    </style>
</resources>